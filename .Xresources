! -- Core
! =======

  Xft.dpi:                    96
  Xft.antialias:              true
  Xft.rgba:                   rgb
  Xft.hinting:                true
  Xft.hintstyle:              hintslight

  URxvt.antialias:            true
  URxvt.geometry:             90x30
  URxvt.loginShell:           true
  URxvt.saveLines:            5000
  URxvt.internalBorder:       2
  URxvt.lineSpace:            0

  URxvt.depth:                32
  URxvt.background:           rgba:0000/2b00/3600/EEEE

  URxvt*keysym.Home: \033[1~
  URxvt*keysym.End: \033[4~

! -- Fonts
! ========

  URxvt.allow_bold:           true

  URxvt*font:                 xft:Meslo LG S:pixelsize=16:antialias=true
  URxvt*boldFont:             xft:Meslo LG S:pixelsize=16:antialias=true

! -- Scrollbar
! ============

  URxvt.scrollStyle:          rxvt
  URxvt.scrollBar:            false

! --  Perl extensions
! ===================

  URxvt.perl-ext-common:      default,matcher
  URxvt.matcher.button:       1
  URxvt.urlLauncher:          /usr/bin/chromium
  URxvt.underlineURLs:        true
  URxvt.url-select.underline: true
  URxvt*keysym.Home:          \033[1~
  URxvt*keysym.End:           \033[4~

! -- Cursor
! =========

  URxvt.cursorBlink:          true
  URxvt.cursorColor:          #657b83
  URxvt.cursorUnderline:      false

! -- Pointer
! ==========

  URxvt.pointerBlank:         true

! -- Colors
! =========

  *background:                #002b36
  *foreground:                #657b83
  *fadeColor:                 #002b36
  *cursorColor:               #93a1a1
  *pointerColorBackground:    #586e75
  *pointerColorForeground:    #93a1a1

  ! black dark/light
  *color0:                    #073642
  *color8:                    #aaaaaa

  ! red dark/light
  *color1:                    #dc322f
  *color9:                    #cb4b16

  ! green dark/light
  *color2:                    #859900
  *color10:                   #586e75

  ! yellow dark/light
  *color3:                    #b58900
  *color11:                   #657b83

  ! blue dark/light
  *color4:                    #268bd2
  *color12:                   #839496

  ! magenta dark/light
  *color5:                    #d33682
  *color13:                   #6c71c4

  ! cyan dark/light
  *color6:                    #2aa198
  *color14:                   #93a1a1

  ! white dark/light
  *color7:                    #eee8d5
  *color15:                   #fdf6e3
